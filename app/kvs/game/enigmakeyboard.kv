<Key@ButtonBehavior+Image>:
    on_kv_post: self.source = f"misc/{self.name}.png"
    on_press: self.source = "misc/keydown.png"
    on_release:
        self.source = f"misc/{self.name}.png"
        app.root.get_screen("game_screen").handle_key(self)

<Lamp@Widget>:
    _color:  [1, 1, 1]
    canvas:
        Color:
            rgb: self._color
        Ellipse:
            size: self.size
            pos: self.pos
    size_hint_x: 0.2

<LampBoard@GridLayout>:
    padding: dp(10)
    spacing: dp(10)
    size_hint_y: 0.7
    canvas:
        Color:
            rgba: 16 / 255, 16 / 255, 16 / 255, 1
        RoundedRectangle:
            size: root.size
            pos: root.pos
    cols: 2

    Lamp:
        id: lamp
    EnigmaOutput:
        id: board_output

<Keyboard@GridLayout>:
